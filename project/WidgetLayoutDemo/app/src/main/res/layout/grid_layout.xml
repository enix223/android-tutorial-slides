<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:columnCount="2"
  android:padding="16dp">

  <TextView android:text="Grid TextView" android:layout_row="0" android:layout_column="0"/>
  <EditText android:hint="Enter text" android:layout_row="0" android:layout_column="1"
    android:minWidth="48dp"
    android:minHeight="48dp"/>

  <Button android:text="Click Me" android:layout_row="1" android:layout_column="0"/>
  <ImageView android:src="@mipmap/ic_launcher" android:layout_width="50dp" android:layout_height="50dp" android:layout_row="1" android:layout_column="1"/>

  <SeekBar android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_row="2" android:layout_column="0"/>
  <Switch android:text="Enable feature" android:layout_row="2" android:layout_column="1"
    android:minWidth="48dp"
    android:minHeight="48dp"/>

</GridLayout>
